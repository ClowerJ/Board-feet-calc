// board Feet Calculator


<!DOCTYPE html>
<html>
<head>
    <title>Board Feet Pricing Calculator</title>
    <style>
        input[type="number"] {
            width: 100px;
        }
    </style>
</head>
<body>
    <h2>Board Feet Pricing Calculator</h2>
    <label for="length">Length (ft):</label>
    <input type="number" id="length" min="0" step="0.01"><br><br>
    
    <label for="width">Width (in):</label>
    <input type="number" id="width" min="0" step="0.01"><br><br>
    
    <label for="thickness">Thickness (in):</label>
    <input type="number" id="thickness" min="0" step="0.01"><br><br>
    
    <label for="price">Price per board foot:</label>
    <input type="number" id="price" min="0" step="0.01"><br><br>
    
    <label for="bunks">Bunk Quantity:</label>
    <input type="number" id="bunks" min="0"><br><br>
    
    <button onclick="calculate()">Calculate</button><br><br>
    
    <p id="result"></p>

    <script>
        function calculate() {
            var length = document.getElementById("length").value;
            var width = document.getElementById("width").value / 12; // Convert inches to feet
            var thickness = document.getElementById("thickness").value / 12; // Convert inches to feet
            var price = document.getElementById("price").value;
            var bunks = document.getElementById("bunks").value;
            
            var boardFeet = (length * width * thickness * bunks).toFixed(2);
            var totalPrice = (boardFeet * price).toFixed(2);
            var piecePrice = (totalPrice / bunks).toFixed(2);
            
            document.getElementById("result").innerHTML = "Board Feet: " + boardFeet + "<br>Total Price: $" + totalPrice + "<br>Price per piece: $" + piecePrice;
        }
    </script>
</body>
</html>
